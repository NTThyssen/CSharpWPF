<Page x:Class="wpfClient.CreateLobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:wpfClient"
      mc:Ignorable="d"
      Title="CreateLobby" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="res/pokergreen.jpg" Stretch="Fill" />
        </Grid.Background>
        <TextBox Name="LobbyName" HorizontalAlignment="Left" Height="29" Margin="294,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" RenderTransformOrigin="0.742,0.345"/>
        <Label Content="Lobby Name:" HorizontalAlignment="Left" Margin="294,90,0,0" VerticalAlignment="Top" Width="226"/>
        <Button Name="createLobby" Content="Create Lobby" HorizontalAlignment="Left" Margin="362,250,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Go Back" Name="back" HorizontalAlignment="Left" Margin="35,30,0,0" VerticalAlignment="Top" Width="75" Background="PaleVioletRed"/>

    </Grid>
</Page>

<Page x:Class="wpfClient.StartPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:wpfClient"
      mc:Ignorable="d"
      Title="StartPage" Height="450" Width="800">
       
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="res/pokergreen.jpg" Stretch="Fill" />
        </Grid.Background>
        <Label Content="Enter Username:" HorizontalAlignment="Left" Margin="326,84,0,0" VerticalAlignment="Top" Height="32" Width="106" RenderTransformOrigin="1.644,0.474"/>
        <Button x:Name="Next" Content="Next" Click="Next_OnClick" HorizontalAlignment="Left" Margin="326,200,0,0" VerticalAlignment="Top" Width="106" Height="34">
            
        </Button>
        <TextBox Name="username" HorizontalAlignment="Left" Height="23" Margin="326,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" RenderTransformOrigin="0.167,0.826"/>

    </Grid>
</Page> 